{
	"name": "@vibehooks/react",
	"type": "module",
	"version": "0.0.1",
	"description": "Modern, unopinionated React hooks with a focus on developer experience.",
	"author": "Sebastian Marat Urdanegui Bisalaya <sebasurdanegui@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/author/library#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SebastianUrdaneguiBisalaya/vibehooks.git"
	},
	"bugs": {
		"url": "https://github.com/SebastianUrdaneguiBisalaya/vibehooks/issues"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"private": true,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "pnpm@10.23.0",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"play": "vite",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"release": "bumpp && pnpm publish",
		"prepublishOnly": "pnpm run build",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write ."
	},
	"peerDependencies": {
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@tsconfig/strictest": "^2.0.8",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/browser-playwright": "^4.0.16",
		"bumpp": "^10.3.2",
		"prettier": "3.7.4",
		"tsdown": "^0.18.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vitest": "^4.0.16",
		"vitest-browser-react": "^2.0.2"
	}
}
